<title><%= @category.name %> со склада в Бийске - ООО"Меркурий"</title>
<div class="container">
  <div class="row">
    <% unless current_page?(contacts_path) %>
        <%= render partial: 'components/sidebar' %>
    <% end %>
    <div class="content_wrap">
      <% unless find_item(@sub_category) %>
      <div class="sub_title">
        <h2>Продукция</h2>
      </div>
      <% end %>
      <div class="content">
        <%= @sub_category.find_each do |i| %>
            <% if find_item(i) %>
            <a href="<%= show_category_subcategory_path(@category, i) %>">
              <div class="item">
                <div class="item_image">
                  <% if i.images? %>
                      <%= image_tag i.images.url %>
                  <% else %>
                      <%= urls_to_images(i.images_url.to_s)%>
                  <% end %>
                </div>
                <div class="item_title">
                  <h4><%= i.name %></h4>
                </div>
                <div class="item_content">
                </div>
              </div>
            </a>
            <% else %>
                <a href="#contacts" class="open_modal">
                  <div class="item">
                    <div class="item_image">
                      <% if i.images? %>
                          <%= image_tag i.images.url %>
                      <% else %>
                          <%= urls_to_images(i.images_url.to_s)%>
                      <% end %>
                    </div>
                    <div class="item_title">
                      <h4><%= i.name %></h4>
                    </div>
                    <div class="item_content">
                    </div>
                  </div>
                </a>
            <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>