<div class="container">
  <div class="row">
    <% unless current_page?(contacts_path) %>
        <%= render partial: 'components/sidebar' %>
    <% end %>
    <div class="content_wrap">
      <div class="info">
        <% @article = Article.find(params[:id]) %>
        <h2><%= @article.title %></h2>
        <p><%= @article.body.html_safe %></p>
        <%= link_to 'Редактировать', edit_article_path(@article) %> |
        <%= link_to 'Назад', articles_path %>
      </div>
    </div>
  </div>
</div>
