<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title">Материалы</h3>
    <div class="box-tools pull-right">
      <!-- Buttons, labels, and many other things can be placed here! -->
      <!-- Here is a label for example -->
      <%= link_to 'Добавить новость', new_article_path, class: 'label label-primary' %>
    </div><!-- /.box-tools -->
  </div><!-- /.box-header -->
  <div class="box-body">
    <table id="example" class="table table-striped table-bordered">
      <thead>
      <tr role="row">
        <th class="sorting">Имя</th>
        <th>Действия</th>
      </tr>
      </thead>
      <tbody>
      <% @articles.each do |article| %>
          <tr>
            <td><%= article.title %></td>
            <td>
              <%= link_to 'Редактировать', edit_article_path(article) %>
              <%= link_to 'Удалить', article, method: :delete, data: { confirm: 'Точно удалить? Ты ни чего не попутал?'} %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div><!-- /.box-body -->
</div><!-- /.box -->
