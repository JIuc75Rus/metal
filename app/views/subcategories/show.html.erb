<title><%= @subcategory.name %> со склада в Бийске - ООО"Меркурий"</title>
<div class="container">
  <div class="row">
    <% unless current_page?(contacts_path) %>
        <%= render partial: 'components/sidebar' %>
    <% end %>
    <div class="content_wrap">
      <div class="sub_title">
        <h2>Продукция</h2>
      </div>
      <div class="content">
        <div class="row">
        <%= @item.find_each do |i| %>
            <a href="#contacts" class="open_modal">
              <div class="item">
                <div class="item_image">
                  <% if i.images? %>
                      <%= image_tag i.images.url %>
                  <% else %>
                      <%= urls_to_images(i.images_url.to_s)%>
                  <% end %>
                </div>
                <div class="item_title">
                  <h4><%= i.title %></h4>
                </div>
                <div class="item_content">
                  <%= i.description %>
                </div>
              </div>
            </a>
        <% end %>
      </div>
      </div>
      <% if @subcategory.description.present? %>
        <div class="description">
          <%= @subcategory.description.html_safe %>
        </div>
      <% end %>
      <div class="advantages_title">
        <h2>Наши приемущества</h2>
      </div>
      <div class="advantages">
        <p class="price_list">Широкий асортимент</p>
        <p class="location">Удобное расположение</p>
        <p class="pacing">Упаковка и доставка</p>
        <p class="community">Профессиональная команда</p>
        <p class="complect">Быстрое коплектование</p>
      </div>
    </div>
  </div>
</div>

